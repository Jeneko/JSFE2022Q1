// Header 

header.header-pages.container
    .header-pages__content
        a.header-pages__logo(href="index.html" title="Main Page")
            .header-pages__logo-title Cozy House
            .header-pages__logo-subtitle Shelter for pets in Boston
        nav.header-pages__menu-container 
            ul.header-pages__menu
                li.header-pages__menu-el
                    a.header-pages__menu-link.header-pages__menu-link--active(href="index.html") About the shelter
                li.header-pages__menu-el
                    a.header-pages__menu-link(href="our-pets.html") Our pets
                li.header-pages__menu-el
                    a.header-pages__menu-link(href="#help") Help the shelter
                li.header-pages__menu-el
                    a.header-pages__menu-link(href="#footer") Contacts

