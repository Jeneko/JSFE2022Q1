mixin pagination()
    nav.pagination 
        ul.pagination__list 
            li.pagination__el 
                a.button-pagination.button-pagination--first(disabled)
            li.pagination__el 
                a.button-pagination.button-pagination--prev(disabled)
            li.pagination__el 
                a.button-pagination.button-pagination--current.pagination__item 1
            li.pagination__el 
                a.button-pagination.button-pagination--next
            li.pagination__el 
                a.button-pagination.button-pagination--last