include _logo
include _burger-button
include _burger-menu

mixin header(menuItems, colorTheme, headerStyle)
    - let headerMod = headerStyle ? `header--${headerStyle}` : ""
    - let contentMod = headerStyle ? `header__content--${headerStyle}` : ""
    - let linkMod = colorTheme ? `header__menu-link--${colorTheme}` : ""
    header(class="header " + headerMod)
        .container.header__container
            div(class = "header__content " + contentMod)
                +logo(colorTheme)
                nav.header__menu-container 
                    ul.header__menu
                        each menuItem in menuItems
                            li.header__menu-el
                                if menuItem.isActive
                                    a(href = menuItem.link class = "header__menu-link active " + linkMod) #{menuItem.text}
                                else
                                    a(href = menuItem.link class = "header__menu-link " + linkMod) #{menuItem.text}
                +burger-button(colorTheme, 'header')
        
    +burger-menu(menuItems, colorTheme)